
@{
    ViewBag.Title = "Alfemo";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<style>
    .background-container {
        width: 100%;
        overflow: hidden;
        margin-top: 24px;
    }

    .background-container::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('@Url.Content("~/img/alfemo/yemek_odasi.jpg")') no-repeat center center;
        background-size: cover;
        opacity: 0.3;
    }

    .card {
        transform: translate(20%, -0%);
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 8px 5px 9px 7px;
        text-align: center;
        opacity: 1;
        margin-top: 15px;
    }

#columnchart_material {
    width: 100%;
    height: 100%;
}

    svg > g:first-of-type > text {
        transform: translateX(calc(46% - 150px));
    }

    .main_content{
        padding:0 0 0 0;
    }
</style>


<div class="background-container">
</div>

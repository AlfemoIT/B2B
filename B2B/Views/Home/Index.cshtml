@{
    ViewBag.Title = "Anasayfa";
}

<style>
    .background-container {
        width: 100%;
        overflow: hidden;
        margin-top: 24px;
    }

    .background-container::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('@Url.Content("~/img/alfemo/tiamo-small-koltuk-tkm.jpg")') no-repeat center center;
        background-size: cover;
        opacity: 0.3;
    }

    .card {
        transform: translate(20%, -0%);
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 8px 5px 9px 7px;
        text-align: center;
        opacity: 1;
        margin-top: 15px;
    }

#columnchart_material {
    width: 100%;
    height: 100%;
}

    svg > g:first-of-type > text {
        transform: translateX(calc(46% - 150px));
    }
</style>

<div class="background-container">
    <div class="row">
        <div class="col-sm-12 tac">
            <ul class="ov_boxes">
                <li>
                    <div class="p_bar_up p_canvas">
                        <img src="~/img/green_bar.png" style="width:100%" />
                    </div>

                    <div class="ov_text">
                        <strong>&#8378;&nbsp;3.458,00</strong>
                        Haftalık Satış
                    </div>
                </li>
                <li>
                    <div class="p_bar_down p_canvas">
                        <img src="~/img/red_bar.png" style="width:100%" />
                    </div>
                    <div class="ov_text">
                        <strong>&#8378;&nbsp;43.567,43</strong>
                        Aylık Satış
                    </div>
                </li>

            </ul>
        </div>
    </div>

    <div class="col-sm-12 col-md-12">
        <div class="col-sm-8 col-md-8 card">
            <div id="columnchart_material"></div>
        </div>
    </div>
</div>

@section Scripts{
